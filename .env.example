# ===========================================
# RestoNext MX - Environment Variables
# ===========================================
# Copy this file to .env and configure your values

# Database
DATABASE_URL=postgresql+asyncpg://restonext:restonext_dev@localhost:5433/restonext

# Redis (for Rate Limiting and WebSocket pub/sub)
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ===========================================
# Observability - Sentry
# ===========================================
# Leave empty to disable Sentry
# Get your DSN from https://sentry.io
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ===========================================
# AI Integration - Perplexity
# ===========================================
# For upselling suggestions
PERPLEXITY_API_KEY=

# ===========================================
# PAC Provider (for CFDI/Facturaci√≥n)
# ===========================================
PAC_PROVIDER=mock
FINKOK_USERNAME=
FINKOK_PASSWORD=
FINKOK_SANDBOX=true
