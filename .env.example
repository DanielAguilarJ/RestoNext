# ============================================
# RestoNext MX - Environment Variables
# ============================================
# Copy this file to .env and configure for your environment
# NEVER commit .env to version control!
# ============================================

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=restonext
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=restonext

# For the API container (auto-composed in docker-compose.yml)
# DATABASE_URL=postgresql+asyncpg://restonext:password@db:5432/restonext

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# Authentication
# ============================================
# IMPORTANT: Change this in production!
JWT_SECRET=your-256-bit-secret-key-here-change-in-production

# ============================================
# Frontend URLs
# ============================================
# Update these for your domain in production
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXT_PUBLIC_WS_URL=wss://your-domain.com/ws

# ============================================
# Sentry (Error Tracking)
# ============================================
# Leave empty to disable Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# AI Integration
# ============================================
PERPLEXITY_API_KEY=

# ============================================
# Scheduler
# ============================================
# Set to false to disable automatic business jobs
SCHEDULER_ENABLED=true

# ============================================
# PAC Provider (CFDI/Invoicing)
# ============================================
PAC_PROVIDER=mock
FINKOK_USERNAME=
FINKOK_PASSWORD=
FINKOK_SANDBOX=true

# ============================================
# SSL/TLS (Let's Encrypt)
# ============================================
# Domain for SSL certificate
DOMAIN=restonext.local
CERTBOT_EMAIL=admin@your-domain.com

# ============================================
# Stripe Configuration (B2B SaaS Billing)
# ============================================
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
# For development, use test keys (sk_test_xxx, pk_test_xxx)
# For production, use live keys (sk_live_xxx, pk_live_xxx)

STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Webhook secret for signature verification
# Get this when you create a webhook endpoint in Stripe Dashboard
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Price IDs for each subscription plan
# Create these in Stripe Products > Add Product > Add Price (recurring)
STRIPE_PRICE_ID_STARTER=price_starter_plan_id
STRIPE_PRICE_ID_PROFESSIONAL=price_professional_plan_id
STRIPE_PRICE_ID_ENTERPRISE=price_enterprise_plan_id

# Frontend URL for Stripe redirects after checkout
FRONTEND_URL=https://your-frontend-domain.com

