# RestoNext Web - Environment Variables Example
# Copy this file to .env.local for local development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Offline-First & Sync Settings (Optional Tuning)
# All values are in milliseconds

# Debounce before confirming offline status (prevents connection flicker)
NEXT_PUBLIC_NETWORK_DEBOUNCE_MS=3000

# Timeout for connectivity ping checks
NEXT_PUBLIC_NETWORK_PING_TIMEOUT_MS=5000

# Debounce before triggering sync after reconnecting
NEXT_PUBLIC_SYNC_DEBOUNCE_MS=2000

# Initial delay for sync retries (exponential backoff)
NEXT_PUBLIC_SYNC_RETRY_DELAY_MS=5000

# Max retries for a single order
NEXT_PUBLIC_SYNC_MAX_RETRIES=10

# WebSocket reconnection base delay
NEXT_PUBLIC_WS_RECONNECT_BASE_MS=3000

# WebSocket reconnection max delay
NEXT_PUBLIC_WS_RECONNECT_MAX_MS=30000

# Debounce before showing "disconnected" UI state for WebSocket
NEXT_PUBLIC_WS_CONNECTION_DEBOUNCE_MS=3000

# WebSocket ping interval
NEXT_PUBLIC_WS_PING_INTERVAL_MS=30000
